<div class="container p-4">
    <div class="row ">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body ">
                    <form action="/links/add" method="POST">
                    <div class="form-group p-2">
                        <input type="text" class="form-control" name="title" placeholder="Titulo" autofocus>
                    </div>
                    <div class="form-group p-2">
                        <input type="url " class="form-control" name="url" placeholder="URL">
                    </div>
                    <div class="form-group p-2">
                        <textarea name="description" rows="2" class="form-control" placeholder="Descripción"></textarea>
                    </div>
                    <div class="form-group d-grid gap-2 p-2">
                        <button class="btn btn-success">Añadir</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>